<footer class="bg-neutral-100 text-neutral-600 text-sm border-t border-neutral-200">
    <div class="max-w-screen-xl mx-auto px-4 py-10">
        <!-- Grid of Links -->
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-8 mb-8">
            @foreach (var footerSection in Sections)
            {
                <div>
                    <h4 class="font-semibold text-black mb-3">@footerSection.Title</h4>
                    <ul class="space-y-1">
                        @foreach (var link in footerSection.Links)
                        {
                            <li><a href="#" class="hover:underline">@link</a></li>
                        }
                    </ul>
                </div>
            }
        </div>

        <div class="border-t border-neutral-300"></div>

        <!-- Bottom Bar -->
        <div class="flex flex-col md:flex-row items-center justify-between mt-6 text-xs text-neutral-500 gap-2">
            <div>&copy; @DateTime.Now.Year BlazorEcommerce. All rights reserved.</div>
            <div class="space-x-4">
                <a href="#" class="hover:underline">Privacy</a>
                <a href="#" class="hover:underline">Terms</a>
                <a href="#" class="hover:underline">Sitemap</a>
            </div>
        </div>
    </div>
</footer>

@code {
    private List<FooterSection> Sections = new()
    {
        new FooterSection("Shop", new[] { "Mac", "iPad", "iPhone", "Watch" }),
        new FooterSection("Services", new[] { "Apple Music", "iCloud", "Apple One" }),
        new FooterSection("Account", new[] { "Manage Account", "Apple Store" }),
        new FooterSection("About", new[] { "Newsroom", "Careers", "Investors" }),
        new FooterSection("Legal", new[] { "Privacy Policy", "Terms of Use", "Sales & Refunds" }),
    };

    private record FooterSection(string Title, IEnumerable<string> Links);
}
