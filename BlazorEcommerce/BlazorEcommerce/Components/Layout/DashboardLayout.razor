                <NavLink href="/admin/analytics/traffic" class="block px-4 py-2 rounded-lg hover:bg-gray-100" activeClass="bg-gray-200 font-semibold">Traffic</NavLink>
                <NavLink href="/admin/analytics/conversion-funnel" class="block px-4 py-2 rounded-lg hover:bg-gray-100" activeClass="bg-gray-200 font-semibold">Conversion Funnel</NavLink>
                <NavLink href="/admin/analytics/page-drop-off" class="block px-4 py-2 rounded-lg hover:bg-gray-100" activeClass="bg-gray-200 font-semibold"> Page Drop-Off</NavLink>
            </div>
            <div class="mt-4">
                <NavLink href="/" class="block px-4 py-2 text-red-600 rounded-lg hover:bg-red-100" activeClass="bg-red-200 font-semibold">Back to Site</NavLink>
            </div>
        </nav>
    </div>
</aside>


    <MobileMenuDash />

    <!-- Main Content -->
    <main class="flex-1 p-6 mt-14 md:mt-0 overflow-x-hidden">
        @Body
    </main>
</div>
