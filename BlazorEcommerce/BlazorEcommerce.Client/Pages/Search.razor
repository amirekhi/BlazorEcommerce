@page "/search"
@using BlazorEcommerce.Client.Services
@using BlazorEcommerce.DTOs.Entities
@inject IClientProductService ProductRepo
@inject NavigationManager NavManager



@rendermode InteractiveWebAssembly

<div class="min-h-screen bg-white px-4 sm:px-6 lg:px-8 flex flex-col items-center justify-start py-20">
    <div class="w-full max-w-2xl text-center">
        <h1 class="text-4xl font-semibold text-gray-900 mb-6">Find Your Product</h1>

        <div class="flex items-center shadow-md rounded-full overflow-hidden border border-gray-200 focus-within:ring-2 focus-within:ring-blue-500 transition">
            <input type="text" 
                   @bind="query" @bind:event="oninput"
                   placeholder="Search for something..." 
                   class="w-full px-6 py-3 text-gray-700 text-lg bg-white outline-none" />
            <button class="bg-gray-900 hover:bg-gray-800 text-white px-6 py-3 font-medium transition" @onclick="SearchProducts">
                Search
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <p class="mt-10 text-gray-600">Searching...</p>
    }
    else if (results?.Any() == true)
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-12 w-full max-w-6xl">
            @foreach (var product in results)
            {
                <a href="/product/@product.Id" >
                <div class="bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-lg transition duration-300 p-6">
                    <div class="aspect-w-1 aspect-h-1 bg-gray-100 rounded-xl mb-4 overflow-hidden">
                        <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-full object-cover" />
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">@product.Name</h3>
                    <p class="text-gray-600 text-sm mt-1">@product.Description</p>
                    <p class="text-blue-600 font-bold text-lg mt-3">$@product.Price</p>
                </div>
                </a>
            }
        </div>
    }
    else if (searched)
    {
        <p class="mt-10 text-gray-500">No results found for "<strong>@query</strong>".</p>
    }
</div>

@code {
    private string query = string.Empty;
    private List<ProductDTO> results = new();
    private bool isLoading = false;
    private bool searched = false;
    private bool initialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
{
    if (firstRender)
    {
        var uri = new Uri(NavManager.Uri);
        var queryParameters = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var q = queryParameters.Get("query");

        if (!string.IsNullOrWhiteSpace(q))
        {
            query = q;
            await SearchProducts();
            StateHasChanged();
        }
    }
}


    private async Task SearchProducts()
    {
        isLoading = true;
        searched = true;
        results = await ProductRepo.SearchProductsAsync(query);
        isLoading = false;
    }
}

