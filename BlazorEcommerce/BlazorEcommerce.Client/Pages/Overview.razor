@using ClassLibrary1.DTOs.Entities;
@using BlazorEcommerce.Client.Services;
@rendermode InteractiveWebAssembly
@inject IClientAnalyticsService AnalyticsService

@if (OverviewData is null)
{
    <p>Loading overview...</p>
}
else
{
    <div class="space-y-8">
        <h1 class="text-3xl font-bold text-gray-800">Overview</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100">
                <h3 class="text-sm text-gray-500 font-medium">Revenue</h3>
                <p class="text-2xl font-semibold mt-1">@OverviewData.TotalRevenue.ToString("C")</p>
            </div>
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100">
                <h3 class="text-sm text-gray-500 font-medium">Orders</h3>
                <p class="text-2xl font-semibold mt-1">@OverviewData.TotalOrders</p>
            </div>
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100">
                <h3 class="text-sm text-gray-500 font-medium">Customers</h3>
                <p class="text-2xl font-semibold mt-1">@OverviewData.TotalCustomers</p>
            </div>
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100">
                <h3 class="text-sm text-gray-500 font-medium">Products</h3>
                <p class="text-2xl font-semibold mt-1">@OverviewData.TotalProducts</p>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Recent Orders</h2>
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Order ID</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Customer</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Amount</th>
                        <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Date</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var order in OverviewData.RecentOrders)
                    {
                        <tr>
                            <td class="px-4 py-2">@order.Id</td>
                            <td class="px-4 py-2">@order.CustomerName</td>
                            <td class="px-4 py-2 text-green-600 font-medium">@order.Total.ToString("C")</td>
                            <td class="px-4 py-2">@order.Date.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-6 text-right">
                <button class="px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition"
                        @onclick="Refresh">
                    Refresh
                </button>
            </div>
        </div>
    </div>
}

@code {
    private OverviewSummaryDto? OverviewData;
    private bool _hasLoaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasLoaded)
        {
            _hasLoaded = true;
            await LoadOverviewAsync();
            StateHasChanged();
        }
    }

    private async Task Refresh()
    {
        await LoadOverviewAsync();
    }

    private async Task LoadOverviewAsync()
    {
        OverviewData = await AnalyticsService.GetOverviewAsync();
    }
}
