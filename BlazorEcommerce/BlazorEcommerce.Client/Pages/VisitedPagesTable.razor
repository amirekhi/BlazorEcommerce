@using ClassLibrary1.DTOs.Entities



@if (Pages == null || Pages.Count == 0)
{
    <div class="text-gray-500 text-sm italic">No page visit data available.</div>
}
else
{
    <div class="overflow-x-auto rounded-xl border border-gray-200 shadow-sm">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
            <thead class="bg-gray-50 text-left font-semibold text-gray-700">
                <tr>
                    <th class="px-4 py-3">Page</th>
                    <th class="px-4 py-3">Visit Count</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
                @foreach (var pag in Pages.OrderByDescending(p => p.Count))
                {
                    <tr>
                        <td class="px-4 py-3 text-blue-600 break-all">@pag.Page</td>
                        <td class="px-4 py-3 text-gray-900">@pag.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    [Parameter]
    public List<VisitedPageDto> Pages { get; set; } = new();
}
